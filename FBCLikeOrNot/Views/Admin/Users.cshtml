
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid" ng-app="UserApp" ng-controller="UserController">

    <!-- begin row -->
    <div class="col-12">
        <div class="card card-statistics">
            <div class="card-body">
                <div class="row">
                    <button class="btn btn-outline-success"><i class="fa fa-plus"></i></button>
                    <div class="dropdown">
                        <input type="text" class="form-control form-control-sm" placeholder="Search Invoice">
                    </div>
                </div>
            </div>
        </div>
        <div class="card card-statistics">
            <div class="card-header">
                <div class="card-heading"><h4 class="card-title">Lista De Usuarios</h4></div>
            </div>
            <div class="card-body">
                <div class="table-responsive table-hover">
                    <table class="table mb-0">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Numero De Empleado</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Apellido</th>
                                <th scope="col">Es Activo</th>
                                <th scope="col">Rol De Usuario</th>
                                <th scope="col">Fecha De Creacion</th>
                                <th scope="col">Fecha De Actualizacion</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="user in UserList">
                                <th>{{ user.employeenumberuser}}</th>
                                <td>{{ user.nameuser}}</td>
                                <td>{{ user.lastnameuser}}</td>
                                <td>True</td>
                                <td>{{user.namerole}}</td>
                                <td>{{ user.createdateuser }}</td>
                                <td>{{ user.editdateuser }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->
</div>
@section scripts {
    <script src="~/App/Users/UsersApp.js"></script>
}
