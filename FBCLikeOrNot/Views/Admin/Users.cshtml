
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid" ng-app="UserApp" ng-controller="UserController">

    <!-- begin row -->
    <div class="col-12">
        <div class="row">
            <div class="col-md-12 m-b-30">
                <div class="d-block d-lg-flex flex-nowrap align-items-center">
                    <div class="page-title mr-2 pr-4 border-right"><h1>Usuarios <i class="fa fa-user-circle text-info"></i></h1></div>

                    <div class="d-flex align-items-center text-center">
                        <button class="btn btn-icon btn-inverse-success" title="Nuevo Usuario" ng-click="ShowAddNewUserModal()">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                    <div class="d-flex align-items-center secondary-menu text-center" style="margin-left:1%">
                        <input type="text" name="name" ng-model="SrchString" class="form-control" placeholder="Busqueda General" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card card-statistics">
            <div class="card-body">
                <div class="table table-responsive table-borderless table-hover">
                    <table class="table mb-0">
                        <thead class="bg-info" style="color:aliceblue">
                            <tr>
                                <th scope="col">Numero De Empleado</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Apellido</th>
                                <th scope="col">Es Activo</th>
                                <th scope="col">Rol De Usuario</th>
                                <th scope="col">Fecha De Creacion</th>
                                <th scope="col">Fecha De Actualizacion</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="user in UserList | filter: SrchString">
                                <td>{{ user.employeenumberuser}}</td>
                                <td>{{ user.nameuser}}</td>
                                <td>{{ user.lastnameuser}}</td>
                                <td><i class="{{ user.isactiveuser ? 'fa fa-check-square text-success': 'fa fa-times-rectangle text-danger' }}"></i></td>
                                <td>{{ user.namerole}}</td>
                                <td>{{ user.createdateuser | date: 'dd MMM, yyyy  hh:mm a' }}</td>
                                <td>{{ user.editdateuser }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->
</div>
@section scripts {
    <script src="~/App/Users/UsersApp.js"></script>
}
