
@{
    ViewData["Title"] = "QuestionSettings";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid" ng-app="QuestionSettinngsApp" ng-controller="QuestionSettinngsController">

    <!-- begin row -->
    <div class="col-12">
        <div class="row">
            <div class="col-md-12 m-b-30">
                <div class="d-block d-lg-flex flex-nowrap align-items-center">
                    <div class="page-title mr-2 pr-4 border-right"><h1>Preguntas <i class="fa fa-question-circle text-info"></i></h1></div>

                    <div class="d-flex align-items-center text-center">
                        <button class="btn btn-icon btn-inverse-success" title="Nueva Pregunta" ng-click="ShowSetQuestionModal()">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                    <div class="d-flex align-items-center secondary-menu text-center" style="margin-left:1%">
                        <input type="text" name="name" ng-model="SrchString" class="form-control" placeholder="Busqueda General" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card card-statistics">
            <div class="card-body">
                <div class="table-responsive table-hover">
                    <table class="table mb-0">
                        <thead class="bg-success" style="color:aliceblue">
                            <tr>
                                <th style="">Pregunta</th>
                                <th class="">Feche De Creacion</th>
                                <th class="">Creado Por</th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="question in QuestionList | filter: SrchString">
                            <tr>
                                <th style="color:black">{{ question.descriptionquestion }}</th>
                                <th style="color:black">{{ question.createdatequestion | date: 'dd MMM, yyyy  hh:mm a' }}</th>
                                <th style="color:black">{{ question.createbyquestion }}</th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- end row -->
    <div class="modal fade" id="js_SetQuestion" tabindex="-1" role="dialog" aria-labelledby="defaultModal" aria-hidden="true">

        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Asignar Pregunta</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="js_SetQuestionForm" class="row">

                        <div class="form-group col-lg-12">
                            <label>Pregunta Del Area</label>
                            <input type="text" name="jv_description_question" ng-model="selected_description_question" class="form-control" />
                        </div>

                        <div class="form-group col-lg-12">
                            <label>Creado Por</label>
                            <input type="text" name="jv_creator_question" ng-model="selected_creator_question" class="form-control" />
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success" ng-click="AssignQuestion()">Asignar</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/App/Questions/QuestionSettingsApp.js"></script>
}

